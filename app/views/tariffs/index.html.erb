<p id="notice"><%= notice %></p>

<h3 class="text-light">Base de Tarifas</h3>

<div class="table-responsive">
<table class="table table-hover bg-light mt-5 mb-5">
  <thead>
    <tr class="bg-dark text-light">
      <th class="text-center">Ano ReferÃªncia</th>
      <th class="text-center">Grupo</th>
      <th class="text-center">Subgrupo</th>
      <th class="text-center">Modalidade</th>
      <th class="text-center">Subclasse</th>
      <th class="text-center">Posto</th>
      <th class="text-center">TUSD [R$/kW]</th>
      <th class="text-center">TUSD [R$/MWh]</th>
      <th class="text-center">TE [R$/MWh]</th>
      <th class="text-center">TUSD+TE [R$/kWh]</th>
    </tr>
  </thead>

  <tbody>
    <% @tariffs.each do |tariff| %>
      <% bg = mod_color(tariff) %>
      <tr class="table-light">
        <td class="text-center"><%= tariff.ano.year %></td>
        <td class="text-center"><%= tariff.grupo %></td>
        <td class="text-center"><%= tariff.subgrupo %></td>
        <td class="<%= bg %>"><%= tariff.modalidade.capitalize %></td>
        <td class="text-center"><%= tariff.subclasse.upcase %></td>
        <td class="text-center"><%= tariff.posto %></td>
        <td class="text-center"><%= tariff.tusd_k > 0 ? tariff.tusd_k : "-"%></td>
        <td class="text-center"><%= return_value tariff.tusd_m %></td>
        <td class="text-center"><%= return_value tariff.te %></td>
        <td class="text-center"><%= return_value ((tariff.tusd_m+tariff.te)/1000).round(5) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
