<p id="notice"><%= notice %></p>

<h1>Parâmetros de Cálculo</h1>

<table class="table table-hover">
  <thead>
    <tr class="bg-dark text-light">
      <th>Ano</th>
      <th>Mes</th>
      <th>Ref</th>
      <th>Bandeira</th>
      <th>Acréscimo [R$]</th>
      <th>PIS [%]</th>
      <th>ICMS [%]</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <% if rate.bandeira == "verde" %>
         <% bg = "text-success" %>
         <% flag = 0.00 %>
      <% elsif rate.bandeira == "amarela" %>
         <% bg = "text-warning" %>
         <% flag = 0.01343 %>
      <% elsif rate.bandeira == "vermelha p1" %>
        <% bg = "text-danger" %>
        <% flag = 0.04169 %>
      <% elsif rate.bandeira == "vermelha p2" %>
        <% bg = "text-danger" %>
        <% flag = 0.06243 %>
      <% else %>
        <% bg = "table-warning" %>
      <% end %>
      <tr>
        <td><%= rate.ano %></td>
        <td><%= rate.mes %></td>
        <td>ANNEL/<%= rate.ref %></td>
        <td class="<%= bg %>"><%= rate.bandeira.upcase %></td>
        <td><%= flag %></td>
        <td><%= rate.pis %></td>
        <td><%= rate.icms %></td>
        <td><%= link_to 'Show', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

